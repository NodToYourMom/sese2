            <ListBoxItem Background="#FFFFFFE1" Foreground="#FFFF9C1A" Content="Lukoil"/>
            <ListBoxItem Background="#FFFFFFE1" Foreground="#FFFF9C1A" Content="Mazda"/>
            <ListBoxItem Background="#FFFFFFE1" Foreground="#FFFF9C1A" Content="Mercedes"/>
            <ListBoxItem Background="#FFFFFFE1" Foreground="#FFFF9C1A" Content="Mitsubishi"/>
